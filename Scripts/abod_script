# MAIN
case "$1" in
  s|d)
    clear
    echo "   ğŸ’  ABO Desktop :: yarn run dev ğŸ’"
    yarn run dev
    ;;
  yarninstall|yi)
    clear
    echo "   ğŸ’  ABO Desktop :: yarn install ğŸ’"
    yarn install
    ;;
  yarntest|yarnt|yt|ytest)
    echo "   ğŸ’  ABO Desktop :: yarn test ğŸ’"
    yarn test
    ;;
  pull|gpod|gpo|p)
    echo "   ğŸ’  ABO Desktop :: Pull Origin ğŸ’"
    tput setaf 45
    git pull origin
    ;;
  "")
    echo "   ğŸ’  ABO Desktop ğŸ’"
    ;;
  *)
    echo "
    â˜”ï¸  $(tput setaf 117)invalid command"
  ;;
