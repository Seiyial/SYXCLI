#!/bin/bash

# Color
tput setaf 9

# MAIN
case "$1" in
  cleanup|clean)
    echo " ã€Š ABO Cleaner ã€‹"
    rm app/assets/javascripts/frontend/app.js && rm app/assets/javascripts/frontend/app.js.map
    ;;
  n|npm|yarn|y)
    clear
    echo "   ğŸ  ABO Admin (1Â° React.js) ğŸ"
    tput setaf 45
    yarn start
    ;;
  yarninstall|yi)
    clear
    echo "   ğŸ  ABO Admin (1Â° React.js - Yarn Install) ğŸ"
    tput setaf 45
    yarn install
    clear
    echo "   ğŸ  ABO Admin (1Â° React.js) ğŸ"
    tput setaf 45
    yarn start
