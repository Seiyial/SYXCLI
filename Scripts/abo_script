    echo "   ğŸ  Rspec test ğŸ"
    ;;
  railsreset|rr|reset|r)
    echo "   ğŸ  ABO Admin (2Â° Rails) ğŸ"
    bundle i && clear
    tput setaf 9 && echo "   ğŸ  ABO Admin (2Â° Rails) ğŸ
    ğŸ’  Rails Server (/Reset.sh) ğŸ’"
    tput sgr0 && ./reset.sh
    ;;
  s|server|rails)
    echo "   ğŸ  ABO Admin (2Â° Rails) ğŸ"
    clear
    tput setaf 9 && echo "   ğŸ  ABO Admin (2Â° Rails) ğŸ
    ğŸ’  Rails Server ğŸ’"
    rails s
    ;;
  sk|sidekiq|sq)
    echo "   ğŸ  ABO Admin (4Â° Sidekiq) ğŸ"
